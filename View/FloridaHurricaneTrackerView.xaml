<Window x:Class="FloridaHurricaneTracker.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FloridaHurricaneTracker"
        mc:Ignorable="d"
        Title="Florida Hurricane Tracker" Height="450" Width="800">
    <DockPanel Margin="10">
        <DataGrid ItemsSource="{Binding Hurricanes}" CanUserAddRows="False">
            <DataGrid.ItemTemplate>
                <DataTemplate>
                    <Border BorderThickness="1" BorderBrush="Gray" Margin="2" Padding="4">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding TimeStamp, StringFormat='yyyy-MM-dd'}" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding MaxWindSpeed}" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </DataGrid.ItemTemplate>
        </DataGrid>
    </DockPanel>
</Window>
